{% extends 'layout.html.twig' %}
{% block title %} {{ "A propos"|trans }} - Gracam {% endblock %}
{% block about %}active{% endblock %}
{% block body %}

<div class="container-fluid my-5 px-0">
    <div class="video wow fadeInUp" data-wow-delay="0.1s">
        <button type="button" class="btn-play" data-bs-toggle="modal" data-src="https://www.youtube.com/embed/DWRcNpR6Kdc" data-bs-target="#videoModal">
            <span></span>
        </button>

        <div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content rounded-0">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Youtube Video</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- 16:9 aspect ratio -->
                        <div class="ratio ratio-16x9">
                            <iframe class="embed-responsive-item" src="" id="video" allowfullscreen allowscriptaccess="always"
                                    allow="autoplay"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h1 class="text-white mb-4">Emergency Plumbing Service</h1>
        <h3 class="text-white mb-0">24 Hours 7 Days a Week</h3>
    </div>
    <div class="container position-relative wow fadeInUp" data-wow-delay="0.1s" style="margin-top: -6rem;">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success  mb-2 alert-dismissible fade show radius-10">
                {{ message|trans }}
            </div>
        {% endfor %}
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="bg-secondaire text-center p-5">
                    <h1 class="mb-4">Commande en ligne</h1>
                    {{ form_start(form, {'attr':{'id': 'form'}}) }}
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                {{ form_row(form.nomclient, {'label': 'Nom', 'attr': {'placeholder':'Nom'}}) }}
                            </div>
                            <div class="col-12 col-sm-6">
                                 {{ form_row(form.phoneclient, {'label': 'Telephone', 'attr': {'placeholder':'Telephone'}}) }}
                            </div>
                            <div class="col-12 col-sm-6">
                                {{ form_row(form.emailclient, {'label': 'Email', 'attr': {'placeholder':'Email'}}) }}
                            </div>
                            <div class="col-12 col-sm-6">
                                {{ form_row(form.adresselivraison, {'label': 'Adresse Livraison', 'attr': {'placeholder':'Adresse Livraison'}}) }}
                            </div>
                            <div class="col-12 col-sm-6">
                                {{ form_row(form.produit, {'label': 'Produit', 'attr': {'placeholder':'Produit'}}) }}
                            </div>
                            <div class="col-12 col-sm-6">
                                {{ form_row(form.quantite, {'label': 'Quantite', 'attr': {'placeholder':'Quantite'}}) }}
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Valider</button>
                            </div>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}